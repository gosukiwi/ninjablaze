extends ../base.jade

block content
  .duel(data-id="#{duel.id}", data-p1="#{duel.player1}",
  data-p2="#{duel.player2}")
    .top-ui
      .player-ui.pure-g
        .pure-u-1-3
          h1 Enemy

          .progress
            span.meter(style="width: 10%")
        .pure-u-1-3.profile
        .pure-u-1-3
          h1 LVL 1

      .bottom-ui
        .player-ui.pure-g
          #player-1-hp.pure-u-1-3.hp
          #info-panel.pure-u-1-3.info-panel
            .user-avatar
              img(src="/assets/img/female-example.jpg")
            .seal
              img(src="/assets/img/seal.png")
          .pure-u-1-3
            ul.jutsu-menu#jutsu-menu
              li Loading...

  .log
    ul
      li Loading...

  script(src="/assets/vendor/requirejs/require.js"
  data-main="/assets/js/game/main.js")
